<p id="notice"><%= notice %></p>

<h1>Listing Leagues</h1>

<table class="table">
  <thead>
    <tr>
      <th>Sport type</th>
      <th>Age group low</th>
      <th>Age group high</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leagues.each do |league| %>
      <tr>
        <td><%= league.sport_type %></td>
        <td><%= league.age_group_low %></td>
        <td><%= league.age_group_high %></td>
        <td><%= link_to 'Show', league %></td>
        <td><%= link_to 'Edit', edit_league_path(league) %></td>
        <td><%= link_to 'Destroy', league, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

